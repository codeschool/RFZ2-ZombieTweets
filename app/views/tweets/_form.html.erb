<%= form_for([@zombie, @tweet]) do |f| %>
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_field :message %>
  </div>
  <div class="field">
    <%= f.fields_for :location do |l| %>
      <%= l.label :name, :location %><br />
      <%= l.text_field :name %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
